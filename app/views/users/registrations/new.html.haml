.devise
  .background
    .box
      .title
        新規会員登録
      .form
        .form__box
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            .field
              = f.label "name"
              = f.text_field :name, autocomplete: 'off', placeholder: "例) 田中", class: "form-input"
            .field
              = f.label "email"
              = f.email_field :email, autocomplete: 'off', placeholder: "例) sample@gmail.com", class: "form-input"
            .field
              = f.label "password"
              = f.password_field :password, autocomplete: 'off', placeholder: "６文字以上", class: "form-input"
            .field
              = f.label "password(再入力)"
              = f.password_field :password_confirmation, autocomplete: 'off', placeholder: "６文字以上", class: "form-input"
            .empty
            = f.submit "登録する", class: "action"
          .text
            %p
              すでに登録されている方は
              = link_to new_user_session_path do
                こちら
